{
  "name": "ghost-brief-intelligence",
  "version": "1.0.0",
  "description": "AI-powered intelligence briefing dashboard with RSS aggregation",
  "private": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:prod": "REACT_APP_ENV=production react-scripts start",
    "server": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "dev:prod": "REACT_APP_ENV=production npm start",
    "build": "react-scripts build",
    "build:prod": "REACT_APP_ENV=production react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write src/**/*.{js,jsx,css}"
  },
  "proxy": "http://localhost:3001",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  }
}
