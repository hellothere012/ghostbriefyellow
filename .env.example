# Environment Variables for Ghost Brief
# Copy this file to .env and update with your values

# Database Configuration (Required for new database system)
DATABASE_URL="postgresql://username:password@localhost:5432/ghost_brief"

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
# For development, leave blank to use localhost:3000
# For production, set to your deployed backend URL
REACT_APP_API_URL=

# Production configuration examples:
# DATABASE_URL="postgresql://user:pass@db.example.com:5432/ghost_brief_prod"
# REACT_APP_API_URL=https://your-app.vercel.app
# REACT_APP_ENV=production

# Environment override (development|production)
# Leave blank to auto-detect based on NODE_ENV and hostname
# REACT_APP_ENV=